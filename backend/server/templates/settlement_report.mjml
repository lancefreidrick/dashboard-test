<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all font-family="Helvetica, san-serif;" 
              color="#8B90A0" 
              padding="0px"/>
      <mj-text padding="0 47px" 
               font-size="12px"
               line-height="17px"/>
      <mj-section background-color="#ffffff"
                  padding="0px"/>
      <mj-column background-color="#ffffff"
                 padding="0px"/>
      <mj-divider border-width="1px" 
                  border-style="solid" 
                  padding="0px 20px"
                  border-color="lightgrey" />
      <mj-button border-radius="100px"
                 background-color="#36D1DC"
                 color="white"
                 height="48px"
                 width="224px"
                 font-size="14px"/>
      <mj-table padding="0px 25px"/>
      <mj-class name="title" 
                font-size="24px" 
                color="#232735" 
                line-height="48px"
                font-size="18px"
                padding-top="48px"/>
      <mj-class name="part1" 
                padding-top="16px"/>
      <mj-class name="part2" 
                padding-top="0px"/>
      <mj-class name="part3" 
                padding-top="8px"/>
      <mj-class name="part4" 
                padding-top="40px"
                padding-bottom="48px"/>
      <mj-class name="part5" 
                padding-top="32px" 
                padding-bottom="8px"
                letter-spacing="1px"
                color="#505565"/>
      <mj-class name="part6" 
                padding-top="30px" 
                padding-bottom="48px"/>
      <mj-class name="reset-button" 
                padding="32px"/>
      <mj-class name="color"
                color="#36D1DC"/>
      <mj-class name="table"
                font-size="10px"
                padding="30px 10px"/>

      
    </mj-attributes>
  </mj-head>
  <mj-body background-color="gray">
    <!-- AQWIRE BANNER -->
    <mj-section>
      <mj-column width="100%" padding="0px">
        <mj-image src="https://qwikwire-static-assets.s3-ap-southeast-1.amazonaws.com/public/dashboard-email-header.jpg"></mj-image>
      </mj-column>
    </mj-section>
    
    <!-- Header  -->
    <mj-section>
      <mj-column>
        <mj-text mj-class="title" color="#232735"><strong>Settlement Report (${total_payments} Payments)</strong></mj-text>
      </mj-column>
    </mj-section>

    <!-- Paragraph -->
    <mj-section>
      <mj-column>
        <mj-table mj-class="table">
          <tr style="border-bottom:1px solid #ecedee;text-align">
            <th style="width: 20%; padding: 10px;">Reference ID</th>
            <th style="width: 40%; padding: 10px;">Customer Name</th>
            <th style="width: 20%; padding: 10px;">Amount</th>
            <th style="width: 20%; padding: 10px;">Date</th>
          </tr>
          <tr style="text-align:center;">
            <td style="width: 20%;">QW-P-6XVQQNE6</td>
            <td style="width: 40%; padding: 30px;">MARY GRACE PORTO AND JONATHAN ERRINGTON-BEECH</td>
            <td style="width: 20%;">PHP 65000.0</td>
            <td style="width: 20%; padding: 10px;">May 09, 2019 11:39:39 PM</td>
          </tr>
        </mj-table>
      </mj-column>
    </mj-section>
    
    <!-- Divider -->
    <mj-section>
      <mj-column>
        <mj-divider border-width="1px"/>	
      </mj-column>
    </mj-section>
    
    <!-- Paragraph -->
    <mj-section>
      <mj-column>
      <mj-text mj-class="part5">MADE POSSIBLE BY</mj-text>
      </mj-column>
    </mj-section>
    <mj-section padding-left="48px">		
        <mj-image src="https://s3-ap-southeast-1.amazonaws.com/qwikwire-static-assets/public/aqwire-logo.png" width="144px"></mj-image>
    </mj-section>
        
    <!-- Paragraph -->
    <mj-section>
      <mj-column>
      	<mj-text mj-class="part6">Copyright Â© 2018 Qwikwire Billing System Inc. All rights reserved. Qwikwire is located at Greenbelt Mansion, 106 Perea, Makati, NCR, Makati 1229, Philippines
        </mj-text>
      </mj-column>
    </mj-section>
    
        
    <!-- Side image -->

    <!-- Payment Details -->
  </mj-body>
</mjml>